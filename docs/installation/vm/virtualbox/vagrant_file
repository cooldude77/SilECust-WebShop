# vagrant file for setting up dev/test enviroment on oracle virtualbox
Vagrant.configure("2") do |config|
  config.vm.box = "bento/ubuntu-22.04"

  # Virtual bo details
    config.vm.provider "virtualbox" do |v|
        v.name = "Test Installation"
        v.memory = 4096
        v.cpus = 4
		v.gui = true
		
		# No internet on host machine ? 
		# solution is here : https://stackoverflow.com/a/18457420
		v.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
		v.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
		# /No internet on host machine ?
		
    end
    # Choose a custom IP so this doesn't collide with other Vagrant boxes
    config.vm.network "private_network", ip: "192.168.200.100"

end
