{% extends 'base.html.twig' %}
{% block javascripts %}
    {% block importmap %}{{ importmap(['app','admin']) }}{% endblock %}
{% endblock %}
{% block body %}
    <div id="wrapper" class="container">
        <div class="row">
            <div id="header" class="col">
                {% block header %}
                {% endblock %}
            </div>
        </div>
        <div class="row my-2">
            <div id="sidebar-wrapper" class="col-sm-3 sidenav">
                {% block sidebar %}
                {% endblock %}
            </div>
            <div id="content-wrapper" class="col-sm mt-2">
                {% block content %}{% endblock %}
            </div>
        </div>
        <div class="row">
            <div id="footer-wrapper">
                {% block footer %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
