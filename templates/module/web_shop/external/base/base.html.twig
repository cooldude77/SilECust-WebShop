{% extends '@SilecustWebShop/application_base.html.twig' %}
{% block head %}

{% endblock %}
{% block body %}
    <div id="wrapper" class="h-100 container">
        <div id="header-wrapper" class="row">
            {% block header_wrapper %}
                {% block header %}
                    <div id="header" class="row">
                    </div>
                {% endblock %}
            {% endblock %}
        </div>
        <div id="content-wrapper" class="row h-100 my-4 ">
            <div id="sidebar-wrapper" class="col-sm-3 sidenav card p-3">
                <div id="sidebar">
                    {% block sidebar %}
                    {% endblock %}
                </div>
            </div>
            <div id="content" class="col-sm card p-3">
                {% block flash %}
                <div id="flash-messages">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% endblock %}
                </div>
                {% block content %}{% endblock %}
            </div>
        </div>

        <div id="footer-wrapper" class="row my-1">
            {% block footer %}{% endblock %}
        </div>

    </div>
{% endblock %}
