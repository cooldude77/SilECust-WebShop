{% if products|length == 0 %}
    No products found
{% else %}
    <div>
        {% for product in products %}

            <div id="product-{{ product.name }}">
                <a href="{{ path('web_shop_product_single_display',{'name':product.name }) }}" target="_blank">
                    {{ product.name }}
                </a>
            </div>
            <div id="product-image">

                <a href="{{ path('web_shop_product_single_display',{'name':product.name }) }}" target="_blank">
                    <img width="100px" height="100px"
                         src="{{ path( 'product_image_file_for_img_tag',{'id':attribute(product,"id")}) }}"
                         alt="{{ product.description }}"/>
                </a>

            </div>

            <div id="product-desc">
                {{ product.description }}
            </div>
            <div id="product-desc">
                {{ product.longDescription }}
            </div>

        {% endfor %}
    </div>
{% endif %}

