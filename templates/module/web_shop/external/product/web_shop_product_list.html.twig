{% if pagination is not null and pagination|length > 0 %}
    <div class="row">
        {{ form_start(sortForm) }}
        <div class="d-flex flex-row">

            <div class="col-sm-3 mx-1">{{ form_widget(sortForm.sort_by) }}</div>
            <div class="col-sm-3 mx-1 ">{{ form_widget(sortForm.order) }}</div>
            <div class="col-sm-3 mx-1">{{ form_widget(sortForm.submit) }}</div>
            {{ form_rest(sortForm) }}

        </div>
        {{ form_end(sortForm) }}
    </div>

    <div class="d-flex flex-row">
        {% for entity in pagination %}
            {#  Is entity the product entity? It could be any other sorted field from other table.
          Get the product from it  #}

            {% set event = dispatchWebShopProductListSingleProductEvent('web_shop.product_list.single_product_display',
                {"entity": entity}) %}
            {% set product = event.getProduct %}

            <div class="col-sm-3 card p-2 mx-auto">
                <div id="product-image">
                    <a href="{{ path('web_shop_product_single_display',{'name':product.name }) }}" target="_blank">
                        <img width="100%" height="100%"
                             src="{{ path( 'product_image_file_for_img_tag',{'id':attribute(product,"id")}) }}"
                             alt="{{ product.description }}"/>
                    </a>

                </div>

                <div id="product- {{ product.description }}" class="row my-2">
                    <a href="{{ path('web_shop_product_single_display',{'name':product.name }) }}" target="_blank">
                        {{ product.description }}
                    </a>
                </div>
                {% include 'master_data/price/base_product/price_product_base_fetch.html.twig' with {'id':product.id} %}

            </div>
        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(
            pagination,
            'admin/ui/panel/section/content/list/sliding.html.twig'
        ) }}
    </div>
{% else %}
    No products found
{% endif %}

