{% block content %}
    <div class="row-flex mr-auto">

    </div>
    <div id="addresses">
        <h2>{{ addressTypeCaption }} <a class="btn btn-link" href="{{ path('sc_my_addresses') }}">
                <i class="bi bi-geo-alt-fill"></i>Manage Addresses
            </a></h2>

        {{ form_start(form) }}
        <ul class="address">
            {% for address in form.addresses %}
                <li>{{ form_widget(address) }}</li>
                {{ address.vars.value.id| singleLine }}
            {% endfor %}
        </ul>
        {{ form_end(form) }}
    </div>
{% endblock %}
