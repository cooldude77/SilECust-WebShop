<form method="post" name="user_login_form">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('sc_app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <label for="username">Login</label>
    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control my-2" autocomplete="username" required autofocus>
    <label for="password">Password</label>
    <input type="password" name="_password" id="password" class="form-control my-2" autocomplete="current-password" required>
    <input type="hidden" name="_target_path" value="{{ path('sc_user_where_to_go_after_login',[],true) }}"/>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
    See https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>
    #}

    <button class="btn btn-primary my-2" type="submit" name="login">
        Login
    </button>
</form>