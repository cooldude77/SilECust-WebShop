{% if listGrid.config.edit_link.edit_link_allowed is defined
    and listGrid.config.edit_link.edit_link_allowed ==true %}
    {% set id  = attribute(entity, 'id') %}
    {% set href =  path( listGrid.config.edit_link.route,{'id':id}) %}
    <div class="d-flex flex mb-1 ml-0 ">
        <a class="link-primary" id="{{ listGrid.config.edit_link.link_id ~"-edit-"~id }}" href="{{ href }}">
            Edit
        </a>
    </div>
{% endif %}