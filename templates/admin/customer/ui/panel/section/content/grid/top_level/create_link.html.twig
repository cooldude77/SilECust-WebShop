{% if listGrid.config.create_link is defined and
    listGrid.config.create_link.create_link_allowed ==  true %}
    {% set after =  path(listGrid.config.create_link.redirect_upon_success_route) %}
    {% set parameterList = {'_redirect_upon_success_url': after} %}
    {% set href = path(listGrid.config.create_link.route,parameterList) %}

    <a class= "create-link btn btn-secondary" href="{{ href }}">
        <i class="bi bi-plus-circle-fill"></i>&nbsp;{{ listGrid.config.create_link.anchorText }}
    </a>
{% endif %}