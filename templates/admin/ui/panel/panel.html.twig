{# templates/user/create.html.twig #}
{% extends 'base/admin_base_template.html.twig' %}

 {% block sidebar %}
     <ul>
         {% for section in sidebarMenu.sections %}
             {% include  'base/_li_section_with_header.html.twig' with section %}
         {% endfor %}

     </ul>
 {% endblock %}
{% block content %}
    {% if app.request.get('type') == 'list' %}
        {% set redirect_upon_success_url =  path('admin_panel',
            { 'load_next': 'product_list','type':'list','context_route':'admin_panel' }) %}

        {% include "admin/ui/panel/_create_button_in_list.html.twig"
            with { 'load_next': 'product_create',
            'type':'create',
            'redirect_upon_success_url': redirect_upon_success_url} only %}
    {% endif %}

    <div class="container">
        {{ content|raw }}
    </div>
{% endblock %}