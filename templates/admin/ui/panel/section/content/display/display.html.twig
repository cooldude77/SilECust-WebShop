<div class="row py-2 my-2">
    <div class="col">
        {% set event = dispatchDisplayEditLinkEvent({
            'params':params
        }) %}
        {% include event.getTemplate with {'params':params} %}
    </div>
</div>
{% for field in params.fields %}

    <div class="row my-1 py-2">
        <div class="col-sm-3 bg-light">
            <p class="font-weight-bolder"> {{ field.label }}:</p>
        </div>
        <div class="col">
            {% set event = dispatchFieldValueEvent({
                'params':params,
                'request': request,
                'entity':entity
            }) %}
            {% if event.getData.column.value != null %}
                {{ event.getData.column.value }}
            {% else %}
                {{ attribute(entity,field.propertyName) }}
            {% endif %}
        </div>
    </div>
{% endfor %}