{# -- Page For Grid level pagination --  #}

<div class="container">
    {# -- Create Link -- #}
    <div class="flex-row d-flex justify-right">
        {% set event = dispatchHeaderCreateLinkEvent('panel.grid.display_create_link',{
            "request":request,
            'column':column,
            'listGrid':listGrid,
            'entity':entity
        }) %}
        {% event.getHtml %}

        <div class="col-3 p-2 ">
            {{ render(controller('\\Silecust\\WebShop\\Controller\\Component\\UI\\Search\\SearchController::search',{'request':request})) }}
        </div>
    </div>
    {# -- Create Row Header -- #}
    {% if listGrid.page_heading is defined %}
        <div>
            <h2> listGrid.page_heading</h2>
        </div>
    {% endif %}
    <div class="row font-weight-bold py-2 bg-light">
        {% set event = dispatchHeaderRowEvent('panel.grid.display_row_header',{
            "request":request,
            'column':column,
            'listGrid':listGrid,
            'entity':entity
        }) %}
        {% event.getHtml %}
    </div>

    {# -- Pagination starts -- #}
    {% if pagination is not null and pagination|length > 0 %}
        {% for entity in pagination %}
            {# -- Row level --  #}
            {% set event = dispatchGridDataRowEvent('panel.grid.display_row_data',{
                "request":request,
                'column':column,
                'listGrid':listGrid,
                'entity':entity
            }) %}
            {% event.getHtml %}

        {% endfor %}
        <div class="navigation">
            {# -- Pagination --  #}
            {% set event = dispatchPaginationForGridRowEvent('panel.grid.display_pagination',{
                "request":request,
                'column':column,
                'listGrid':listGrid,
                'entity':entity
            }) %}
            {% event.getHtml %}
        </div>
    {% else %}
        <h2>No records found</h2>
    {% endif %}
</div>

