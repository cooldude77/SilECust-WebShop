{# templates/admin/ui/panel/panel_admin.html.twig #}
{% extends 'base/admin_base_template.html.twig' %}
{% block header %}
    {{ render(controller(
        'App\\Controller\\Admin\\UI\\Panel\\Components\\PanelHeaderController::header'
    )) }}
{% endblock %}
 {% block sidebar %}
     {{ render(controller(
         'App\\Controller\\Admin\\UI\\Panel\\Components\\PanelSideBarController::sideBar'
     )) }}
 {% endblock %}
{% block content %}
    {% if app.request.get('type') == 'list' %}
        {% include "admin/ui/panel/_create_button_in_list.html.twig" %}
    {% elseif app.request.get('type') == 'display' %}
        {% include "admin/ui/panel/_display_button_in_list.html.twig" %}
    {% endif %}

    <div class="container">
        {{ content|raw }}
    </div>
{% endblock %}