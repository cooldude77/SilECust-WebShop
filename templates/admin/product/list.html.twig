{% if products is not null and products|length > 0 %}
    <div class="container">
        {% for product in products %}
            <div class="row">
                <div class="col-sm-4" style="background-color:lavender;">
                    <a href="{{ path('product_display',{id:product.id}) }}"> {{ product.code }}</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}