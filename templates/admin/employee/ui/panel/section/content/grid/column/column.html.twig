{% if column.action is defined and column.action == 'display' %}

    {% set link_text = column.value is defined ? column.value: attribute(entity, column.propertyName) %}
    {% include '@SilecustWebShop/admin/employee/ui/panel/section/content/grid/column/action/display_link.html.twig' with {
        'function':listGrid.function is defined ? listGrid.function: request.get('_function'),
        'link_text':link_text,
        'id':attribute(entity, 'id'),
        'link_id':listGrid.link_id} %}

{% else %}
    {% if column.type is defined and column.type == 'icon' %}
        {% if column.value == true %}
            <i class="bi bi-check"></i>
        {% endif %}
    {% elseif column.value is defined %}
        {{ column.value }}
    {% else %}
        {{ attribute(entity, column.propertyName) }}
    {% endif %}
{% endif %}